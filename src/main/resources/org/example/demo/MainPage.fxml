<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo.Application"
            prefHeight="400.0" prefWidth="600.0">

    <TableView fx:id="playersTable" layoutX="50" layoutY="50" prefWidth="500" prefHeight="200">
        <columns>
            <TableColumn text="Player Name" fx:id="playerNameColumn" prefWidth="100" />
            <TableColumn text="Board Size" fx:id="playerSizeColumn" prefWidth="100" />
            <TableColumn text="Status" fx:id="playerStatusColumn" prefWidth="70" />
            <TableColumn text="Score" fx:id="playerScoreColumn" prefWidth="70"/>
            <TableColumn text="Game ID" fx:id="gameIdColumn" prefWidth="70"/>
            <TableColumn text="Re" fx:id="reconnectColumn" prefWidth="90"/>
        </columns>
    </TableView>

    <HBox layoutX="120" layoutY="300" spacing="20" alignment="CENTER">
        <Button text="Register" fx:id="rgButton" onAction="#handlergButtonClick" />
        <Button text="Start Game" fx:id="startButton" onAction="#handleStartButtonClick" />
        <Button text="Update" fx:id="updateButton" onAction="#handleUpdateButtonClick" />
        <Button text="History" fx:id="historyButton" onAction="#handleHistoryButtonClick" />
    </HBox>

</AnchorPane>
